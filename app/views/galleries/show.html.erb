<div class="page-header">
  <h1>
    <%= @gallery.name %>
    <small><%= @gallery.description %></small>
  </h1>
</div>

<%= render "likes", object: @gallery, path: [@gallery, :like] %>

<% if signed_in? %>
  <nav>
    <%= link_to "Add Image", new_gallery_image_path(@gallery) %>
    <%= link_to "Edit Gallery", edit_gallery_path(@gallery) %>
    <%= link_to "Delete Gallery", @gallery, method: :delete, data: { confirm: "Are you sure?" } %>
  </nav>
<% end %>

<br>

<section class="container">
  <%= render "thumbnail_table", images: @images %>
</section>
