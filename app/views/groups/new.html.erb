<div class="page-header">
  <h1>
    New Group
  </h1>
</div>

<%= render "errors", object: @group %>

<%= form_for @group do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <%= form.submit "Create Group" %>
<% end %>
