<div class="page-header">
  <h1>
    <%= @user.email %>
  </h1>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Galleries</h2>

    <% if signed_in? && current_user == @user %>
      <p><%= link_to "New Gallery", new_gallery_path %><p>
    <% end %>

    <%= render "list", collection: @user.galleries %>
  </div>

  <div class="col-md-6">
    <h2>Groups</h2>

    <% if signed_in? && current_user == @user %>
      <p><%= link_to "New Group", new_group_path %></p>
    <% end %>

    <%= render "list", collection: @user.groups %>
  </div>
</div>
