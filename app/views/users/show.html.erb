<h1><%= @user.email %></h1>

<h2>Galleries</h2>

<% if signed_in? && current_user == @user %>
  <p><%= link_to "New Gallery", new_gallery_path %><p>
<% end %>

<%= render_list(@user.galleries) || "This user has no galleries." %>

<h2>Groups</h2>

<% if signed_in? && current_user == @user %>
  <p><%= link_to "New Group", new_group_path %></p>
<% end %>

<%= render_list(@user.groups) || "This user has no groups." %>
